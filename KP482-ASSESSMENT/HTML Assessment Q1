<script>


    // add Row
    function addHtmlTableRow()
    {
        // get the table by id
        // create a new row and cells
        // get value from input text
        // set the values into row cell's

        var newRow = table.insertRow(table.length),
         cell1 = newRow.insertCell(0),
         cell2 = newRow.insertCell(1),
         cell3 = newRow.insertCell(2),
         deleterow = newRow.insertCell(3).innerHTML = '<button>Remove</button>';
         deleterow.onclick = function(){
         deleteRow(rowID);
       }

            name = document.getElementById("name").value,
            bday = document.getElementById("bday").value,
            eyecolour = document.getElementById("eyecolour").value;



        cell1.innerHTML = name;
        cell2.innerHTML = bday;
        cell3.innerHTML = eyecolour;

    }

  function myFunction() {
      document.getElementById("table").deleteRow(0);
    }

function resetPage(){
    window.location.reload();
}

  document.getElementById("conter").innerHTML = countFunction();


function countFunction() {
  var count = document.getElementById("table").rows.length;
  document.getElementById("counter").innerHTML = "Found " + count + " rows in the table.";
}
